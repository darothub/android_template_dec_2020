<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_15sdp"
    android:background="@drawable/rounded_corner_background">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payment_terms_dialog_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/specialty_layout_item"
        />

    <LinearLayout
        android:id="@+id/payment_dialog_decision_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/payment_terms_dialog_rv"
        >
        <TextView
            android:id="@+id/dialog_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="@dimen/_12sdp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/dialog_ok_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textSize="@dimen/_12sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_12sdp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>