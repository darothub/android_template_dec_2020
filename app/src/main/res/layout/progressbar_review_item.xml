<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/White">

    <TextView
        android:id="@+id/progressbar_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="5"
        android:textSize="@dimen/_5sdp"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressbar_review_pb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:indicatorSize="@dimen/_10sdp"
        app:trackCornerRadius="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:progress="30"
        android:text="@string/dash"
        app:layout_constraintBottom_toBottomOf="@id/progressbar_review_tv"
        app:layout_constraintStart_toEndOf="@id/progressbar_review_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/progressbar_review_tv"
        app:layout_constraintVertical_bias=".5" />
</androidx.constraintlayout.widget.ConstraintLayout>