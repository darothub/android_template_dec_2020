<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:padding="@dimen/_15sdp"
    tools:context=".ui.customer.SingleFashionistaFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/single_fashionista_fragment_image_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <ImageView
            android:id="@+id/single_fashionista_fragment_image_iv"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/profile_image"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/single_fashionista_fragment_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_image_cv"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/hello_blank_fragment"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"/>
    <TextView
        android:id="@+id/single_fashionista_fragment_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_name_tv"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/hello_blank_fragment"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"/>
    <View
        android:id="@+id/single_fashionista_fragment_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_address_tv" />
    <TextView
        android:id="@+id/single_fashionista_fragment_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_line1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/password_standard"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>

    <View
        android:id="@+id/single_fashionista_fragment_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_info_tv" />

    <Button
        android:id="@+id/single_fashionista_fragment_chat_btn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_line2"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_blue_outline_white_backgrnd"
        android:paddingStart="@dimen/_40sdp"
        android:paddingEnd="@dimen/_40sdp"
        android:drawableStart="@drawable/ic_chatbubblesvg"
        android:text="@string/chat_str"
        android:textAllCaps="false"
        android:layout_marginEnd="@dimen/_2sdp"
        android:textColor="@color/colorPrimary"

        app:layout_constraintEnd_toStartOf="@id/single_fashionista_fragment_call_btn"
        />

    <Button
        android:id="@+id/single_fashionista_fragment_call_btn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_line2"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        android:background="@drawable/rounded_green_outline_white_backgrnd"
        android:drawableStart="@drawable/ic_calliconsvg"
        android:paddingStart="@dimen/_40sdp"
        android:paddingEnd="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:text="@string/call"
        android:textColor="@color/colorGreen"
        app:layout_constraintStart_toEndOf="@id/single_fashionista_fragment_chat_btn"
        />
    <View
        android:id="@+id/single_fashionista_fragment_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_call_btn" />

    <TextView
        android:id="@+id/single_fashionista_fragment_rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_line3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:text="@string/rating"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/single_fashionista_fragment_rating_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_rating_tv"
        app:layout_constraintStart_toStartOf="@id/single_fashionista_fragment_rating_tv"
        app:layout_constraintEnd_toEndOf="@id/single_fashionista_fragment_rating_tv"
        android:text="@string/rating_value"
        android:layout_marginTop="@dimen/_5sdp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"/>
    <RatingBar
        android:id="@+id/single_fashionista_fragment_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_marginTop="@dimen/_5sdp"
        android:progressTint="@color/colorRatingGold"
        android:progressBackgroundTint="@color/colorRatingGold"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_rating_value_tv"
        app:layout_constraintStart_toStartOf="@id/single_fashionista_fragment_rating_tv"
        app:layout_constraintEnd_toEndOf="@id/single_fashionista_fragment_rating_tv"/>

    <TextView
        android:id="@+id/single_fashionista_fragment_see_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_reviews"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_rb"
        app:layout_constraintStart_toStartOf="@id/single_fashionista_fragment_rating_tv"
        app:layout_constraintEnd_toEndOf="@id/single_fashionista_fragment_rating_tv"
        />

    <ViewFlipper
        android:id="@+id/single_fashionista_fragment_favourite_vf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/single_fashionista_fragment_rb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".8"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_rating_value_tv"
        >
        <ImageView
            android:id="@+id/single_fashionista_fragment_favourite_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias=".8"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_rating_value_tv"
            android:src="@drawable/ic_favourite_outline"
            />
        <ImageView
            android:id="@+id/single_fashionista_fragment_favourite_fill_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias=".8"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_rating_value_tv"
            android:src="@drawable/ic_favourite_fill"
            />
    </ViewFlipper>

    <TextView
        android:id="@+id/single_fashionista_fragment_add_fav_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_favourites"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/single_fashionista_fragment_see_review_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_favourite_vf"
        />
    <include
        android:id="@+id/single_fashionista_fragment_gallery_btn"
        layout="@layout/button_and_progressbar"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/single_fashionista_fragment_see_review_tv"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />

</androidx.constraintlayout.widget.ConstraintLayout>