<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:layout_margin="@dimen/_7sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/search_result_picture_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_contacts_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/search_result_picture_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_result_picture_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/add_measurement"
        android:layout_marginTop="@dimen/_10sdp"

        android:maxLines="2"
        android:ems="10"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/search_result_picture_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_result_picture_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/add_measurement"
        android:layout_marginTop="@dimen/_3sdp"

        android:maxLines="2"
        android:ems="8"

        android:ellipsize="end"
        android:textSize="@dimen/_10sdp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>

