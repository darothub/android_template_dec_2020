<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:padding="@dimen/_10sdp"

        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile_image"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dash"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="@id/profile_image"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:text="@string/edit_profile"
            android:background="@drawable/rounded_corner_background_primary"
            app:layout_constraintTop_toBottomOf="@id/profile_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:padding="@dimen/_10sdp"

            />
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_btn"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <ImageView
            android:id="@+id/client_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_contacts_24px"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/clients_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clients"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@id/client_image"
            app:layout_constraintBottom_toBottomOf="@id/client_image"
            app:layout_constraintStart_toEndOf="@id/client_image"

            />
        <ImageView
            android:id="@+id/next_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintTop_toTopOf="@id/client_image"
            app:layout_constraintBottom_toBottomOf="@id/client_image"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/client_image"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <ImageView
            android:id="@+id/resources_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/theaters_24px"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/resources_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resources"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@id/resources_image"
            app:layout_constraintBottom_toBottomOf="@id/resources_image"
            app:layout_constraintStart_toEndOf="@id/client_image"
            />
        <ImageView
            android:id="@+id/resources_next_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintTop_toTopOf="@id/resources_image"
            app:layout_constraintBottom_toBottomOf="@id/resources_image"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resources_image"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <ImageView
            android:id="@+id/subscription_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_shopping_cart_24px"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/subscription_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subscription"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@id/subscription_image"
            app:layout_constraintBottom_toBottomOf="@id/subscription_image"
            app:layout_constraintStart_toEndOf="@id/client_image"
            />
        <ImageView
            android:id="@+id/subscription_next_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintTop_toTopOf="@id/subscription_image"
            app:layout_constraintBottom_toBottomOf="@id/subscription_image"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subscription_next_image"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <ImageView
            android:id="@+id/logout_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_power_settings_new_24px"
            app:layout_constraintTop_toBottomOf="@id/line4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@id/logout_image"
            app:layout_constraintBottom_toBottomOf="@id/logout_image"
            app:layout_constraintStart_toEndOf="@id/client_image"
            />
        <ImageView
            android:id="@+id/logout_next_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintTop_toTopOf="@id/logout_image"
            app:layout_constraintBottom_toBottomOf="@id/logout_image"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logout_next_image"
            android:layout_marginTop="@dimen/_10sdp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
