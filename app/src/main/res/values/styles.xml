<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
<!--        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>-->
<!--        <item name="android:buttonStyle">@style/PoppinsButtonStyle</item>-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppThemeActivity" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
<!--        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>-->
<!--        <item name="android:buttonStyle">@style/PoppinsButtonStyle</item>-->
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
<!--        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>-->
    </style>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:gravity">start|center</item>
    </style>

</resources>