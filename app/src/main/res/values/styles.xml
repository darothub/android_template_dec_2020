<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppThemeTwo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!--Profile activity theme-->
    <style name="ProfileActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorGray</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
<!--        <item name="android:background">@color/colorAccent</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:button">@style/CustomButtonStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppThemeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
<!--        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>-->
<!--        <item name="android:buttonStyle">@style/PoppinsButtonStyle</item>-->
        <item name="editTextStyle">@style/EditTextCustomStyle</item>
<!--        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>-->
    </style>
    <style name="EditTextCustomStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="backgroundTint">@color/colorGray</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditProfileEditTextCustomStyle" parent="EditTextCustomStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:maxLength">30</item>
        <item name="maxLines">2</item>
    </style>

    <style name="SpecialtyEditTextCustomStyle" parent="EditTextCustomStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:maxLength">50</item>
        <item name="maxLines">2</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="EditProfileTextViewCustomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">28dp</item>
    </style>
    <style name="SpecialtyTextViewCustomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="SpinnerCustomStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="backgroundTint">@color/colorGray</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorControlActivated">@color/colorPrimary </item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" >
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="ToolBarTheme"  parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextHintStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorGray</item>
    </style>


</resources>